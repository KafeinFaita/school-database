<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <div class="parents-form-container">
        <%- include('./partials/navigation.ejs') %>
            <div class="parents-table-container">
            <h1 class="parents-title">Parents</h1>  
                <div class="parents-table-subcontainer">
                    <div class="parents-main-table">
                       <center> 
                            <table class="parents-table" border="1">
                                <tr>
                                    <th>ID</th>
                                    <th>Mother Name</th>
                                    <th>Father Name</th>
                                    <th>Guardian</th>
                                    <th>Related Students</th>
                                    <th>Action/s</th>
                                </tr>
                                
                                <% for(let x = 0; x < idNum.length; x++) { %>
                                    <tr>
                                        <th><%= idNum[x] %></th>
                                        <% parentNames[x].forEach(parent => { %>
                                            <th><%= parent %></th>
                                        <% }) %>
                                        <th><%= studentNames[x] %></th>
                                        <th><button><a href="/student-record/parents/<%= idNum[x] %>">Edit Info</a></button></th>
                                    </tr>
                                    
                                <% } %>
                                
                            </table>
                        </center>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<html lang="en">

    <%- include('./partials/head.ejs') %>

<body>    
    <div class="student-record-parent">
        <%- include('./partials/navigation.ejs') %>

        <div class="student-record-form">
            <h1 class="student-record-title">Update Teacher</h1>

            <div class="student-record-subcontainer">

                <form action="" method="POST" class="student-record-subcontainer-info">

                    <div class="student-record-subcontainer-body">

                        <div class="info-input">
                            <label for="lastName">Last Name</label>
                            <input type="text" name="lastName" required>
                        </div>

                        <div class="info-input">
                            <label for="firstName">First Name</label>
                            <input type="text" name="firstName" required>
                        </div>

                        <div class="info-input">
                            <label for="middleName">Middle Name</label>
                            <input type="text" name="middleName" required>
                        </div>

                        <div class="info-input">
                            <label for="dob">Date of Birth</label>
                            <input type="date" name="dob" required>
                        </div>

                        <div class="info-input">
                            <label for="contact">Mobile Number</label>
                            <input type="number" name="contact" min="0" required>
                        </div>

                        <div class="info-input">
                            <label for="email">Email Address</label>
                            <input type="email" name="email" required>
                        </div>

                        <div class="info-input" style="flex: 75%;">
                            <label for="address">Complete Address</label>
                            <input type="text" name="address" style="width: 80%" required>
                        </div>
                        
                        <div class="radio-input" style="flex: 25%;">
                            <p>Gender:</p>
                            <input type="radio" id="male" name="gender" value="male" required>
                            <label for="male">Male</label>
                            <input type="radio" id="female" name="gender" value="female">
                            <label for="female">Female</label>
                        </div>

                        <div class="info-input">
                            <label for="religion">Nationality</label>
                            <input type="text" name="religion" required>
                        </div>

                        <div class="info-input">
                            <label for="joinDate">Date of Birth</label>
                            <input type="date" name="joinDate" required>
                        </div>

                        <button>Update</button>

                       
                    </div>

                    
                </form>

            </div>
        </div>
    </div>
    
</body>
</html>
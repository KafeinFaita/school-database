<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <div class="profile-main-container">
        <%- include('./partials/navigation.ejs') %>
        <div class="profile-sub-container">
            <%- include('./partials/usernavigation.ejs') %>
            <div class="profile-title"><h2>Admin Profile</h2></div>
            <div class="profile-container">
                <div class="admin-profile">
                    <div class="admin-image">
                        <img class="cover" src="https://cdn.pizap.com/pizapfiles/images/photo_backgrounds_textures_app05.jpg" alt="cover">
                        <img class="profile" src="https://png.pngtree.com/png-vector/20190321/ourmid/pngtree-vector-users-icon-png-image_856952.jpg" alt="profile">
                    </div>
                    <div class="about-admin">
                        <h1>Admin</h1>
                        <h4>Description about admin</h4>
                        <button class="view-profile">View Full Profile</button>
                    </div>
                </div>
                <div class="about-profile">
                    <div class="profile-navigator">
                        <a href="#"><h4>Profile</h4></a>
                        <a href="#"><h4>Timeline</h4></a>
                        <a href="#"><h4>Settings</h4></a>
                    </div> 
                    <hr class="divider">
                    <div class="profile-view">
                        <div class="name-email">
                            <div class="profile-input">
                                <label for="name">Name</label><br>
                                <input type="text" name="name" id="name" value="paulpdoa">
                            </div>
                            <div class="profile-input">
                                <label for="email">Email</label><br>
                                <input style="width:450px;" type="email" name="email" id="email" value="polopdoandres@gmail.com">
                            </div>
                        </div>
                        <div class="number-date">
                            <div class="profile-input">
                                <label for="bday">Birthday</label><br>
                                <input type="text" name="bday" id="bday" value="03/21/1998"><br>
                            </div>
                            <div class="profile-input">
                                <label for="gender">Gender</label><br>
                                <select id="gender">
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                </select><br>
                            </div>
                            <div class="profile-input">
                                <label for="phone">Phone Number</label><br>
                                <input type="number" name="phone" id="phone" value="093424242442">
                            </div>
                        </div>
                        <div class="profile-address">
                            <div class="profile-input">
                                <label for="address">Address</label><br>
                                <input style="width:400px;" type="text" name="address" id="address" value="Daang Amaya 2 Tanza, Cavite">
                            </div>
                            <div class="profile-input">
                                <label for="about">About Me</label><br>
                                <textarea style="width:400px;" name="about">I am Paul Andres</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>